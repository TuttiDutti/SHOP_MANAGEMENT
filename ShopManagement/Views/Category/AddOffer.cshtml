@model ShopManagement.Models.Category

@{
    ViewData["Title"] = "AddOffer";
}
<div id="back">
    <div id="view">
     <div class="row align-items-center" id="head">
            <div class="col-md-6">
                <div class="mb-3">
                    <h4 class="card-title" id="title">Dodaj promocję na kategorię</h4>
                </div>
            </div>


        </div>
<hr />
<div class="row">
    <div class="col-md-4">



                <h5 class="m-4">@Html.DisplayFor(modelItem => Model.Name)</h5>

                <form method="post" asp-action="AddOffer" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" for="id" />
                        <div class="form-group">
                            <label for="offer" class="fw-bold">Promocja:</label>
                            <input id="offer" name="offer" class="form-control"/>
                        </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary m-3" />
                <a class="btn btn-primary" asp-action="Index">Anuluj</a>
            </div>
        </form>
    </div>
</div>

    </div>
</div>



