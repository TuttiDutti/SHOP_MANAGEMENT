<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShopManagement.styles.css" asp-append-version="true" />
</head>
<body>
        <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom " id="nav">
            <div class="container-fluid">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="padding:0; margin-left:30px;margin-right:40px">
                    <img src="~/logo.png" alt="logo" height="50px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <div class="navbar-nav flex-grow-1">
                        <div class="dropdown nav-item">
                            <a href="" class="btn dropdown-toggle" data-toggle="dropdown" id="dropItem">
                                Użytkownicy <div class="bi bi-caret-down d-inline"></div>
                            </a>
                            <div class="dropdown-menu" id="drop">

                                <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Lista użytkowników</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Absence" asp-action="Index">Lista nieobecności</a>

                            </div>
                        </div>
                        <div class="dropdown nav-item">
                            <a href="" class="btn dropdown-toggle" data-toggle="dropdown" id="dropItem">
                                Asortymenty <div class="bi bi-caret-down d-inline"></div>
                            </a>
                            <div class="dropdown-menu" id="drop">

                                <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Lista asortymentów</a>
                                @if (User.IsInRole("Admin"))
                                {
                                     <div class="dropdown-divider"></div>
                                <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Lista kategorii</a>
                                }
                               
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index">Dokumenty magazynowe</a>

                            </div>
                        </div>

                        <div class="dropdown nav-item">
                            <a href="" class="btn dropdown-toggle" data-toggle="dropdown" id="dropItem">
                                Dokumenty <div class="bi bi-caret-down d-inline"></div>
                            </a>
                            <div class="dropdown-menu" id="drop">

                                <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Document" asp-action="Index">Lista dokumentów</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Document" asp-action="Upload">Dodaj dokument</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Document" asp-action="DocumentType">Typy dokumentów</a>

                            </div>
                        </div>
                    </div>
                    <a class="btn" asp-controller="User" asp-action="ChangePassword" id="dropItem" style="margin-right:40px"> Zmień hasło</a>
                    <a class="btn" asp-controller="User" asp-action="Logout" id="dropItem" style="margin-right:40px"> Wyloguj się</a>
                    
                </div>
            </div>
                
                
        </nav>
    </header>
    
    <div class="container-fluid">
        <main role="main" id="main" class="align-items-center d-flex justify-content-center">
            @RenderBody()
        </main>
    </div>

   @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ShopManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
