@model ShopManagement.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Dodaj uzytkownika";
}
<div id="back" class="container-fluid">
    <div id="view">
        <div class="container-fluid">
            <div class="row align-items-center" id="head">
                <div class="col-md-6">
                    <div class="mb-3 p-2">
                        <h3 class="card-title" id="title">Dodaj użytkownika</h3>
                    </div>
                </div>


            </div>
            <hr />
            <div class="row h-100 d-flex align-items-center justify-content-center" id="center">
                <div class="w-75">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mb-2">
                            <div class="form-group col">
                                <label asp-for="Name" class="control-label fw-bold"></label>
                                <input asp-for="Name" placeholder="Podaj imię" class="form-control" id="in" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col">
                                <label asp-for="LastName" class="control-label fw-bold"></label>
                                <input asp-for="LastName" placeholder="Podaj nazwisko" class="form-control" id="in" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="form-group col">
                            <label asp-for="Login" class="control-label fw-bold"></label>
                                <input asp-for="Login" placeholder="Podaj nazwisko" class="form-control" id="in" />
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                        <div class="form-group col">
                            <label asp-for="Password" class="control-label fw-bold"></label>
                            <input asp-for="Password" placeholder="Podaj login" class="form-control" id="in" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        </div>
                        
                        <div class="form-group  mb-2">
                            <label asp-for="Email" class="control-label  mt-1 fw-bold"></label>
                            <input asp-for="Email" placeholder="Podja e-mail" class="form-control " id="in" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col">
                                <label asp-for="RoleId" class="control-label fw-bold"></label>
                                <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control" id="in">
                                </select>
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>
                            <div class="form-group col">
                                <label asp-for="Number" class="control-label fw-bold "></label>
                                <input asp-for="Number" placeholder="Podaj numer telefonu" class="form-control col" id="in" />
                                <span asp-validation-for="Number" class="text-danger"></span>
                            </div>
                            <div class="form-group col">
                                <label asp-for="VacationDays" class="control-label fw-bold"></label>
                                <input asp-for="VacationDays" placeholder="Podaj dni urlopowe" class="form-control col" id="in" />
                                <span asp-validation-for="VacationDays" class="text-danger"></span>
                            </div>
                        </div>

                        
                        <div class="form-group d-flex justify-content-end">
                            <input type="submit" value="Dodaj" class="btn btn-primary m-3" />
                            <a class="btn btn-primary m-3" asp-action="Index">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>


            <br />
            <br />
        </div>
        

    </div>
</div>

