@model ShopManagement.ViewModels.ChangePassViewModel

@{
    ViewData["Title"] = "Zmiana hasła";
}

<div id="back">
    <div id="view">
        <div class="row align-items-center" id="head">
            <div class="col-md-6">
                <div class="mb-3">
                    <h4 class="card-title" id="title">Zmień hasło</h4>
                </div>
            </div>


        </div>

        <div class="row">
            <div class="col-md-4">
                <form asp-action="ChangePassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="OldPassword" class="control-label"></label>
                        <input type="password" asp-for="OldPassword" class="form-control" id="in" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label"></label>
                        <input type="password" asp-for="NewPassword" class="form-control" id="in" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" id="in" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        @if(ViewBag.Valid != null)
                        {
                            <label class="text-danger">@ViewBag.Valid</label>
                        }
               
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Zmień" class="btn btn-primary" />
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-3">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>