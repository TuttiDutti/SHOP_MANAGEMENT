@model ShopManagement.Models.User

@{
    ViewData["Title"] = "Edytuj uzytkownika";
}
<div id="back">
    <div id="view">
       <div class="row align-items-center" id="head">
            <div class="col-md-6">
                <div class="mb-3">
                    <h4 class="card-title" id="title">Edytuj użytkownika</h4>
                </div>
            </div>
            

        </div>
        <hr />
        <div class="row h-100 d-flex align-items-center justify-content-center" id="center">
            <div class="w-75">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row mb-2">
                        <div class="form-group col">
                        <label asp-for="Name"  class="control-label fw-bold"></label>
                            <input asp-for="Name" id="in" class="form-control" required />
                        
                    </div>
                    <div class="form-group col">
                            <label asp-for="LastName" class="control-label fw-bold"></label>
                            <input asp-for="LastName" id="in" class="form-control" required />
                        
                    </div>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Email" class="control-label fw-bold"></label>
                        <input asp-for="Email" id="in" class="form-control" required />
                        
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <label asp-for="Login" class="control-label fw-bold"></label>
                            <input asp-for="Login" id="in" class="form-control" required />

                        </div>
                        <div class="form-group col">
                            <label asp-for="Number" class="control-label fw-bold"></label>
                            <input asp-for="Number" id="in" class="form-control" />

                        </div>
                        <div class="form-group col">
                            <label asp-for="VacationDays" class="control-label fw-bold"></label>
                            <input asp-for="VacationDays" id="in" class="form-control" required />

                        </div>
                    </div>
                    

                    <div class="form-group mb-4">
                        <label asp-for="RoleId" class="control-label fw-bold"></label>
                        <select asp-for="RoleId" id="in" asp-items="ViewBag.Roles" class="form-control" required> </select>
                    </div> 
                    <div class="form-group m-2">
                        
                        <input type="checkbox" asp-for="isBlocked" id="in" class="form-check-input" />
                        <label asp-for="isBlocked"  class="form-check-label fw-bold"></label>
                        
                    </div>
                    <div class="form-group d-flex justify-content-end">

                        <input type="submit" value="Zapisz" class="btn btn-primary m-3" />
                        <a class="btn btn-primary m-3" asp-action="Index">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>

        <div>
            
        </div>
    </div>
</div>


