@model IEnumerable<ShopManagement.Models.Photo>

@{
    ViewData["Title"] = "Zdjęcia";
}
<div id="back">
   <div class="row align-items-center" id="head">
                <div class="col-md-6">
                    <div class="mb-3">
                        <h4 class="card-title" id="title">Zdjęcia produktu</h4>
                    </div>
                </div>
                <br />
                <div >
                    <div class="d-flex flex-wrap align-items-center justify-content-end gap-2 mb-3">
                       
                        <div>
                    <a asp-action="AddPhoto" asp-route-id="@ViewBag.ProdId" class="btn btn-primary" style="margin-right:5rem">
                        Dodaj
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                          <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                          <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                        </svg>
                            </a>
                        </div>
                        
                    </div>
                </div>
            </div>
       
        <table class="table">
            <thead>
                <tr>
                    <th>
                        
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Content)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsMain)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            
                        </td>
                        <td>
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Content)" alt="Obraz" height="200">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsMain)
                        </td>
                        <td>

                            @if (item.IsMain == false)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary ">Zmień miniaturkę</a>
                            <button type="button" class="text-danger btn" style="margin-left:1rem;" data-toggle="modal" data-target="#modal">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                </svg>
                            </button>
                            }
                        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Usuwanie zdjęcia</h5>
                                    </div>
                                    <div class="modal-body">
                                        <span>Czy na pewno chcesz usunąć zdjęcie?</span>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Usuń</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    <a class="btn btn-primary m-3" asp-controller="Product" asp-action="Details" asp-route-id="@ViewBag.ProdId">Powrót</a>
    
</div>
