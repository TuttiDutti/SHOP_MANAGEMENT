@model ShopManagement.Models.DocumentType

@{
    ViewData["Title"] = "CreateType";
}
<div id="back">
    <div id="view">
        <div class="row align-items-center" id="head">
            <div class="col-md-6">
                <div class="mb-3">
                    <h4 class="card-title" id="title">Dodaj rodzaj dokumentu</h4>
                </div>
            </div>


        </div>
        <hr />
        <div class="row h-100 d-flex align-items-center justify-content-center" id="center">
            <div class="w-75">
                <form asp-action="CreateType">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label fw-bold"></label>
                        <input asp-for="Name" id="in" class="form-control" required/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-end">
                        <input type="submit" value="Dodaj" class="btn btn-primary m-3" />
                        <a class="btn btn-primary m-3" asp-action="DocumentType">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>
