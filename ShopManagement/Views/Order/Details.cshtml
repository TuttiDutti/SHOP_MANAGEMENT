@model ShopManagement.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Detials";
}

<div id="back">
    <div class="row align-items-center m-5" id="head">
        <div class="col-md-6">
            <div class="mb-3">
                <h4 class="card-title" id="title">@Html.DisplayFor(model => model.Number)</h4>
            </div>
        </div>
        <br />
        <hr />
        <div class="row h-100 d-flex align-items-center justify-content-center" id="center" style="margin:0">
            <div class="w-75">
                <div class="">
                    <div>
                        
                        
                        <div class="row mb-2">
                            <div class="form-group col">
                                <label asp-for="User" class="control-label fw-bold"></label>
                                <input asp-for="User" id="in" class="form-control" readonly />

                            </div>
                            <div class="form-group col">
                                <label asp-for="CreatedDate" class="control-label fw-bold"></label>
                                <input asp-for="CreatedDate" id="in" class="form-control" readonly />

                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col">
                                <label asp-for="Company" class="control-label fw-bold"></label>
                                <input asp-for="Company" id="in" class="form-control" readonly />

                            </div>
                            
                            <div class="form-group col">
                                <label asp-for="NIP" class="control-label fw-bold"></label>
                                <input asp-for="NIP" id="in" class="form-control" readonly />

                            </div>
                        </div>
                        <div class="form-group col">
                                <label asp-for="Address" class="control-label fw-bold"></label>
                                <textarea asp-for="Address" id="in" class="form-control" readonly></textarea>

                            </div>
                        
                        
                        <div class="table-responsive mt-4">
                            <table class="table align-middle">
                                <tbody>
                            @foreach (var item in Model.ProductOrders)
                            {
                                <tr>
                                    <td></td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SerialNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NetPrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Amuont)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Total)
                                    </td>
                                </tr>
                            }
                            </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-end">
                        <a class="btn btn-primary m-3" asp-action="Index">Powrót</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>