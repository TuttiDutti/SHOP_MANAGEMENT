@model ShopManagement.Models.Announcement

@{
    ViewData["Title"] = "Create";
}


<div id="back">
     <div class="row align-items-center" id="head">
        <div class="col-md-6">
            <div class="mb-3">
                <h4 class="card-title" id="title">Dodaj ogłoszenie</h4>
            </div>
        </div>
        <br />
        

    </div>
    <div class="row m-5">
        <div class="col-lg-12">
            <div class="">
                <div class="row h-100 d-flex align-items-center justify-content-center" id="center">
                    <div class="w-75">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Title" class="control-label fw-bold"></label>
                                <input asp-for="Title" id="in" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label fw-bold"></label>
                                <textarea type="text" asp-for="Description" id="in" class="form-control" ></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Date" class="control-label fw-bold"></label>
                                <input asp-for="Date" id="in" class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3 d-flex justify-content-end">
                                <input type="submit" value="Dodaj" class="btn btn-primary m-2" />
                                <a class="btn btn-primary m-2" asp-action="Index">Anuluj</a>
                            </div>
                        </form>
                    </div>
                </div>
           </div>
        </div>
    </div>
</div>



